<div class="page-header">
  <h1>
    Ingredient tastes
    <a href="/ingredient_tastes/new" class="btn btn-lg btn-success">New Ingredient taste</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ingredient</th>
        <th>Taste</th>
        <th>Actions</th>
      </tr>

      <% @ingredient_tastes.each do |ingredient_taste| %>
      <tr>
        <td><%= ingredient_taste.ingredient.name %></td>
        <td><%= ingredient_taste.taste.name %></td>
        <td>
          <a href="/ingredient_tastes/<%= ingredient_taste.id %>" class="btn btn-primary">
            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true">
            </span>
          </a>
          <a href="/ingredient_tastes/<%= ingredient_taste.id %>/edit" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true">
            </span>
          </a>
          <a href="/delete_ingredient_taste/<%= ingredient_taste.id %>" class="btn btn-danger" rel="nofollow">
            <span class="glyphicon glyphicon-remove" aria-hidden="true">
            </span>
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
