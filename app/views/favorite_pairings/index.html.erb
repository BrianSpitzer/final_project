<div class="page-header">
  <h1>
    Favorite pairings
    <a href="/favorite_pairings/new" class="btn btn-lg btn-success">New Favorite pairing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Pairing</th>
        <th>Actions</th>
      </tr>

      <% @favorite_pairings.each do |favorite_pairing| %>
      <tr>
        <td><%= favorite_pairing.user_id %></td>
        <td><%= favorite_pairing.pairing_id %></td>
        <td>
          <a href="/favorite_pairings/<%= favorite_pairing.id %>" class="btn btn-primary">Show</a>
          <a href="/favorite_pairings/<%= favorite_pairing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite_pairing/<%= favorite_pairing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
