<div class="page-header">
  <h3>Recipe Method #<%= @recipe_method.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recipe</dt>
      <dd><%= @recipe_method.recipe_id %></dd>

      <dt>Sequence</dt>
      <dd><%= @recipe_method.sequence %></dd>

      <dt>Description</dt>
      <dd><%= @recipe_method.description %></dd>

    </dl>

