<div class="page-header">
  <h1>
    Recipe methods
    <a href="/recipe_methods/new" class="btn btn-lg btn-success">New Recipe method</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Sequence</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @recipe_methods.each do |recipe_method| %>
      <tr>
        <td><%= recipe_method.recipe_id %></td>
        <td><%= recipe_method.sequence %></td>
        <td><%= recipe_method.description %></td>
        <td>
          <a href="/recipe_methods/<%= recipe_method.id %>" class="btn btn-primary">Show</a>
          <a href="/recipe_methods/<%= recipe_method.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipe_method/<%= recipe_method.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
