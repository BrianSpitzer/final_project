<div class="page-header">
  <h1>
    Pairings
  </h1>  
  <a href="/pairings/new" class="btn btn-default btn-success">    
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 
    Add new pairing
  </a>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First ingredient</th>
        <th>Second ingredient</th>
        <th>Pairing strength</th>
        <th>Actions</th>
      </tr>

      <% @pairings.each do |pairing| %>
      <tr>
        <td><%= pairing.first_ingredient.name %></td>
        <td><%= pairing.second_ingredient.name %></td>
        <td><%= pairing.pairing_strength %></td>
        <td>
          <a href="/pairings/<%= pairing.id %>" class="btn btn-primary">
            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true">
            </span>
          </a>
          <a href="/pairings/<%= pairing.id %>/edit" class="btn btn-warning">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true">
            </span>
          </a>
          <% if pairing.user_id == current_user.id %>
            <a href="/delete_pairing/<%= pairing.id %>" class="btn btn-danger" rel="nofollow">
              <span class="glyphicon glyphicon-remove" aria-hidden="true">
              </span>
            </a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
