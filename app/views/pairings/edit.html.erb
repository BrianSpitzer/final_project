<!-- Validation failure messages -->
<% if @pairing.errors.any? %>
  <% @pairing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Pairing</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_pairing/<%= @pairing.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_ingredient_id -->
      <div class="row">
        <div class="form-group">
          <div class="col-md-2">
            <label for="first_ingredient_id" class="control-label">
              First ingredient
            </label>
          </div>
          <div class="col-md-10">    
            <%= select_tag(:first_ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @pairing.first_ingredient_id ), :class => "form-control") %>
          </div>
        </div>
      </div>
      
      <!-- Label and input for second_ingredient_id -->
      <div class="row">
        <div class="form-group">
          <div class="col-md-2">
            <label for="second_ingredient_id" class="control-label">
              Second ingredient
            </label>
          </div>
          <div class="col-md-10">    
            <%= select_tag(:second_ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @pairing.second_ingredient_id ), :class => "form-control") %>
          </div>
        </div>
      </div>

      <!-- Label and input for pairing_strength -->
      <div class="row">
        <div class="form-group">
          <div class="col-md-2">
            <label for="pairing_strength" class="control-label">
              Pairing strength
            </label>
          </div>
          <div class = "col-md-10">
            <%= select_tag(:pairing_strength, options_for_select([
              ['good','good'], 
              ['better','better'],
              ['best','best']
              ], @pairing.pairing_strength), :class => "form-control") %>        
          </div>
        </div>
      </div>


      <button class="btn btn-warning">
        Update Pairing
      </button>
      or
      <a href="/pairings/<%= @pairing.id %>">Cancel</a>
    </form>
  </div>
</div>
