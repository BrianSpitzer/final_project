<div class="page-header">
  <h3>Pairing #<%= @pairing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>First ingredient</dt>
      <dd><%= @pairing.first_ingredient_id %></dd>

      <dt>Second ingredient</dt>
      <dd><%= @pairing.second_ingredient_id %></dd>

      <dt>Pairing strength</dt>
      <dd><%= @pairing.pairing_strength %></dd>

      <dt>Inverse</dt>
      <dd><%= @pairing.inverse %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pairings" class="btn btn-primary">
        Back
      </a>
      <a href="/pairings/<%= @pairing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_pairing/<%= @pairing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
