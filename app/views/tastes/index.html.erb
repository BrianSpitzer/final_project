<div class="page-header">
  <h1>
    Tastes
    <a href="/tastes/new" class="btn btn-lg btn-success">New Taste</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @tastes.each do |taste| %>
      <tr>
        <td><%= taste.name %></td>
        <td>
          <a href="/tastes/<%= taste.id %>" class="btn btn-primary">Show</a>
          <a href="/tastes/<%= taste.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_taste/<%= taste.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
