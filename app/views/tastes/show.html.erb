<div class="page-header">
  <h3>Taste #<%= @taste.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @taste.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tastes" class="btn btn-primary">
        Back
      </a>
      <a href="/tastes/<%= @taste.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_taste/<%= @taste.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
