<!-- Validation failure messages -->
<% if @ingredient_technique.errors.any? %>
  <% @ingredient_technique.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Ingredient Technique #<%= @ingredient_technique.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_ingredient_technique/<%= @ingredient_technique.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for ingredient_id -->
      <div class="form-group">
        <label for="ingredient_id" class="control-label">
          Ingredient
        </label>

        <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @ingredient_technique.ingredient_id %>">
      </div>

      <!-- Label and input for technique_id -->
      <div class="form-group">
        <label for="technique_id" class="control-label">
          Technique
        </label>

        <input type="text" id="technique_id" name="technique_id" placeholder="Technique" class="form-control" value="<%= @ingredient_technique.technique_id %>">
      </div>

      <button class="btn btn-warning">
        Update Ingredient Technique
      </button>
      or
      <a href="/ingredient_techniques/<%= @ingredient_technique.id %>">Cancel</a>
    </form>
  </div>
</div>
