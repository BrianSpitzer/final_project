<!-- Validation failure messages -->
<% if @ingredient_group.errors.any? %>
  <% @ingredient_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Ingredient Group #<%= @ingredient_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_ingredient_group/<%= @ingredient_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @ingredient_group.name %>">
      </div>

      <!-- Label and input for ingredient_id -->
      <div class="form-group">
        <label for="ingredient_id" class="control-label">
          Ingredient
        </label>

        <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @ingredient_group.ingredient_id %>">
      </div>

      <button class="btn btn-warning">
        Update Ingredient Group
      </button>
      or
      <a href="/ingredient_groups/<%= @ingredient_group.id %>">Cancel</a>
    </form>
  </div>
</div>
