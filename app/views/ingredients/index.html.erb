<div class="page-header">
  <h1>
    Ingredients
    <a href="/ingredients/new" class="btn btn-lg btn-success">New Ingredient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Weight</th>
        <th>Volume</th>
        <th>Season</th>
        <th>Function</th>
        <th>Form</th>
        <th>Actions</th>
      </tr>

      <% @ingredients.each do |ingredient| %>
      <tr>
        <td><a href="/ingredients/<%= ingredient.id %>"><%= ingredient.name %></a></td>
        <td><%= ingredient.weight %></td>
        <td><%= ingredient.volume %></td>
        <td><%= ingredient.season %></td>
        <td><%= ingredient.function %></td>
        <td><%= ingredient.form %></td>
        <td>
          <a href="/ingredients/<%= ingredient.id %>" class="btn btn-primary"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>
          <a href="/ingredients/<%= ingredient.id %>/edit" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="/delete_ingredient/<%= ingredient.id %>" class="btn btn-danger" rel="nofollow"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
